#include <stdio.h>
#include <stdlib.h>
#include <time.h>


void cria_campo_eletrico_peixe(char mapa_oceano[altura][largura]){

    mapa_oceano[posicao_peixe_y - 1][posicao_peixe_x] = '1';
    mapa_oceano[posicao_peixe_y + 1][posicao_peixe_x] = '1';
    mapa_oceano[posicao_peixe_y][posicao_peixe_x - 1] = '1';
    mapa_oceano[posicao_peixe_y][posicao_peixe_x + 1] = '1';
}
